{
  "name": "claude-conversation-mcp-server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "MCP server for indexing and searching Claude conversation exports",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "npm run typecheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "mcp:start": "tsx src/server.ts",
    "mcp:ingest": "tsx src/cli.ts ingest",
    "mcp:reindex": "tsx src/cli.ts reindex",
    "mcp:stats": "tsx src/cli.ts stats",
    "mcp:eval": "tsx src/cli.ts eval"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.4",
    "better-sqlite3": "^11.10.0",
    "dotenv": "^16.6.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.3.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20"
  }
}
